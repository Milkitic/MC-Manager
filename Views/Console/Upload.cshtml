@model FileViewModel
@{
    ViewData["Title"] = "Mod上传";
}
<section class="wrapper">
    <h3>
        <i class="fa fa-angle-right"></i> @ViewData["Title"]
    </h3>
    <div class="col-md-12">
        <div class="form-panel">
            <h4 class="mb"><i class="fa fa-angle-right"></i> @ViewData["Title"]</h4>
            @if (ViewData["State"] != null)
            {
                if (ViewData["State"].ToString() == "500")
                {
                    <div class="alert alert-danger" style="margin-top:40px;">@ViewData["Message"]</div>
                }
                else if (ViewData["State"].ToString() == "200")
                {
                    <div class="alert alert-success" style="margin-top:40px;">@ViewData["Message"]</div>
                }
            }
            <form asp-controller="Console" role="form" asp-action="Upload" enctype="multipart/form-data" method="post" class="form-horizontal style-form">
                @*<div class="form-group">
                        <label asp-for="Name"></label>
                        <input type="text" class="form-control" asp-for="Name" />
                    </div>*@
                <div class="form-group">
                    <label class="col-sm-2 col-sm-2 control-label" asp-for="Remark"></label>
                    <div class="col-sm-10">
                        <input type="text" class="form-control" asp-for="Remark" />
                        <span class="help-block">将文件名替换为备注名（暂不支持中文）</span>
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-sm-2 col-sm-2 control-label" asp-for="ModFile"></label>
                    <div class="col-sm-10">
                        <input type="file" asp-for="ModFile" />
                        <span class="help-block">仅支持.jar和.zip格式</span>
                    </div>
                </div>
                    <button type="submit" class="btn btn-default">上传</button>
            </form>
        </div>
    </div>
</section>
